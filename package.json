{
  "name": "business-app",
  "private": true,
  "version": "1.0.0",
  "description": "Full-stack app with React (Vite) frontend and NestJS backend",
  "workspaces": [
    "web-app",
    "api"
  ],
  "volta": {
    "node": "22.20.0",
    "npm": "10.9.4"
  },
  "scripts": {
    "dev:web": "npm run dev --workspace web-app",
    "dev:api": "npm run start:dev --workspace api",
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "build:web": "npm run build --workspace web-app",
    "build:api": "npm run build --workspace api",
    "install:all": "npm install --workspaces",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix",
    "supabase:start": "npm run supabase:start --workspace api",
    "supabase:stop": "npm run supabase:stop --workspace api",
    "supabase:status": "npm run supabase:status --workspace api",
    "supabase:db:start": "npm run supabase:db:start --workspace api",
    "supabase:db:reset": "npm run supabase:db:reset --workspace api",
    "supabase:secrets": "npm run supabase:secrets --workspace api"
  },
  "devDependencies": {
    "concurrently": "^9.0.0",
    "prettier": "^3.6.2"
  }
}